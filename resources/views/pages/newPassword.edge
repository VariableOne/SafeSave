<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  <title> Reset Password </title>

  @vite(['resources/css/app.css', 'resources/js/app.js'])
</head>
<body>
@include('pages/header')
@if(passwordError)
<div class="alert alert-danger d-flex align-items-center" role="alert" id="warning" style="visibility: visible;">
    {{passwordError}}
    <button type="button" class="btn-close" aria-label="Close"
        onclick="document.getElementById('warning').style.visibility = 'hidden';"
        id="close_btn"></button>
</div>
@endif
<div class="container mt-5">
    <div class="card">
      <div class="card-left">
        <div class="text-center">
            <br>
            <h3>Wilkommen bei SafeSave!</h3>
          </div>
            <img src="man_without_a_life.jpeg" alt="Man Without a Life">
        </div>
        <div class="card-right">
          <div class="card-body">
            <div class="text-center">
              <h3>Passwort zurücksetzen</h3>
              <small>Geben Sie Ihr neues Passwort ein</small>
            </div>
            <br>
            <form action="/resetAccomplished" method="POST">
              {{csrfField()}}
              <div class="form-group">
                <div class="form-group">
                    <label for="password"> Neues Passwort</label>
                    <input type="password" class="form-control" name="password" id="password" placeholder="Passwort" required>
                  </div>
                  <br>
                  <div class="form-group">
                      <label for="confirmPassword"> Neues Passwort Wiederholen</label>
                      <input type="password" class="form-control" name="confirmPassword" id="confirmPassword" placeholder="Passwort bestätigen" required>
                    </div>
                    <input type="hidden" id="email" name="email" value="{{email}}"/>
                    <br>
                    <button type="submit" class="btn btn-primary">Zurücksetzen</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
</body>
</html>