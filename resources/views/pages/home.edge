        {{ csrfField() }}
        <div class="modal-body">
          <input type="text" name="newFileName" id="newFileName" placeholder="Umbennen in...">
        </div>
        <div class="modal-footer">
          <input type="hidden" id="fileToRename" name="fileToRename" value=""/>
