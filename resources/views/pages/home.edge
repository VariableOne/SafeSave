<body>
@include('pages/header')
<div class="row" style="display: flex; flex-direction: column; width: 100%;">
  <div style="display: flex; justify-content: flex-end; margin-bottom: 10px;">
    <form action="/home" method="POST">
      {{csrfField()}}
      <br>
    <a class="btn btn-primary mr-2" href="/logout" style="border-radius: 5px; ">
    <h4 style="color: white; display: flex; align-items: center; margin: 0;" href="/auth">
      Logout 
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-arrow-right" viewBox="0 0 16 16">
        <path fill-rule="evenodd" d="M10 12.5a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v2a.5.5 0 0 0 1 0v-2A1.5 1.5 0 0 0 9.5 2h-8A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-2a.5.5 0 0 0-1 0z"/>
        <path fill-rule="evenodd" d="M15.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 0 0-.708.708L14.293 7.5H5.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708z"/>
      </svg>
    </h4>
    </a>
    </form>
  </div>
  <div class="col">
    <div style="margin-top: 20px; margin-left: 20px;">
      <h3 style="color: white;">Wilkommen! Hier sind deine Dateien {{session.get('student').username}}</h3>
    </div>
  </div>
</div>

<div class="container">
  <div class="scrollable-container">
    <div class="text-center">
      <h4 style="color: grey;">Dateien</h4>
      @if (files.length > 0)
      <!-- Wenn Dateien vorhanden sind -->
      <ul class="list-group">
        @each(file in files)
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <div class="d-flex w-100 align-items-center file-info">
              <!-- Container für die Dateiinformationen -->
              <div class="d-flex w-75">
                <div>
                  <strong>Dateiname:</strong> {{ file.file_name }}
                </div>
                <div>
                  <strong>Größe:</strong> {{ file.file_size }} Bytes
                </div>
                <div>
                  <strong>Format:</strong> {{ file.file_format }}
                </div>
              </div>
              <!-- Container für den "Anzeigen"-Button -->
              <form action="/uploads/{{file.file_name}}" method="GET">
                {{ csrfField() }}
              <div>
              <button class="btn btn-primary btn-sm">Öffnen</button>
              <input type="hidden" id="openFiled" name="openFiled" value="{{file.file_name}}"/>
              </div>
            </form>
            <form action="/files/{{file.file_id}}" method="POST" onsubmit="return confirm('Are you sure you want to delete this file?');">
              {{ csrfField() }}
              <input type="hidden" name="_method" value="DELETE">
              <button type="submit" class="btn btn-danger btn-sm">
                <!-- Dein Trash Icon SVG -->
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                  <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"/>
                  <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"/>
                </svg>
              </button>
            </form>            
            <div>
            <button type = "btn btn-warning">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325"/>
              </svg>
            </button>
            </div>
          </li>
        @endeach
      </ul>
      @else
      <!-- Wenn keine Dateien vorhanden sind -->
      <p>Noch keine Dateien vorhanden.</p>
      @endif
<form action="/home" method="POST">
  {{csrfField()}}
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Neuen Ordner erstellen</h5>
      </div>
      <div class="modal-body">
        <input type="text" name="folderName" id="folderName" placeholder="Name des neuen Ordners">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Abbrechen</button>
        <button type="button" class="btn btn-primary">Erstellen</button>
      </div>
    </div>
  </div>
</div>
</div>
</form>

  <!-- Button Container -->
  <div class="button-container">
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
      Neuer Ordner
    </button>
    <button type="button" class="btn btn-secondary"  onclick="triggerFileUpload()">Datei hochladen</button>
    <form id="uploadForm" action="/upload" method="POST" enctype="multipart/form-data" style="display:none;">
    {{ csrfField() }}
    <input type="hidden" id="student" name="student" value="{{ session.get('student').username }}"/>
    <input type="file" id="fileInput" name="fieldName" onchange="uploadFile()"/>
  </form>
  </div>

<script>

  function triggerFileUpload() {
    document.getElementById('fileInput').click();
  }

  function uploadFile() {
    const form = document.getElementById('uploadForm');
    form.submit();
  }
</script>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>