<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  <title> SafeSave Main Page </title>

  @vite(['resources/css/app.css', 'resources/js/app.js'])
</head>
<body>
@include('pages/header')
<div class="row" style="display: flex; flex-direction: column; width: 100%;">
  <div style="display: flex; justify-content: flex-end; margin-bottom: 10px;">
    <form action="/home" method="POST">
      {{csrfField()}}
      <br>
    <a class="btn btn-primary mr-2" href="/logout" style="border-radius: 5px; ">
    <h4 style="color: white; display: flex; align-items: center; margin: 0;" href="/auth">
      Logout 
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-arrow-right" viewBox="0 0 16 16">
        <path fill-rule="evenodd" d="M10 12.5a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v2a.5.5 0 0 0 1 0v-2A1.5 1.5 0 0 0 9.5 2h-8A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-2a.5.5 0 0 0-1 0z"/>
        <path fill-rule="evenodd" d="M15.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 0 0-.708.708L14.293 7.5H5.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708z"/>
      </svg>
    </h4>
    </a>
    </form>
  </div>
  <div class="col">
    <div style="margin-top: 20px; margin-left: 20px;">
      <h3 style="color: white;">Wilkommen! Hier sind deine Dateien {{session.get('student').username}}</h3>
    </div>
  </div>
</div>

<div class="container">
  <div class="scrollable-container">
    <div class="text-center">
      <h4 style="color: grey;">Dateien</h4>
      
      @if (files.length > 0)
      <!-- Wenn Dateien vorhanden sind -->
      <ul>
        @each(file in files)
          <li>
            <strong>Dateiname:</strong> {{ file.file_name }}<br>
            <strong>Größe:</strong> {{ file.file_size }} Bytes<br>
            <strong>Format:</strong> {{ file.file_format }}
          </li>
        @endeach
      </ul>
    @else
      <!-- Wenn keine Dateien vorhanden sind -->
      <p>Noch keine Dateien vorhanden.</p>
    @endif

<form action="/home" method="POST">
  {{csrfField()}}
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Neuen Ordner erstellen</h5>
      </div>
      <div class="modal-body">
        <input type="text" name="folderName" id="folderName" placeholder="Name des neuen Ordners">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Abbrechen</button>
        <button type="button" class="btn btn-primary">Erstellen</button>
      </div>
    </div>
  </div>
</div>
</div>
</form>

  <!-- Button Container -->
  <div class="button-container">
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
      Neuer Ordner
    </button>
    <button type="button" class="btn btn-secondary"  onclick="triggerFileUpload()">Datei hochladen</button>
    <form id="uploadForm" action="/upload" method="POST" enctype="multipart/form-data" style="display:none;">
    {{ csrfField() }}
    <input type="hidden" id="student" name="student" value="{{ session.get('student').username }}"/>
    <input type="file" id="fileInput" name="fieldName" onchange="uploadFile()"/>
  </form>
  </div>

<script>

  function triggerFileUpload() {
    document.getElementById('fileInput').click();
  }

  function uploadFile() {
    const form = document.getElementById('uploadForm');
    form.submit();
  }
</script>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>